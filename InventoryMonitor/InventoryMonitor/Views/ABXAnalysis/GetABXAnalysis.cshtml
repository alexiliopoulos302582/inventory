@{
}


@model IEnumerable<ABXAnalysisResult>

@{
    ViewData["Title"] = "ABX Filtered Analysis";
}


<div class="container" style="color:white">
    <h4>ABX Analysis Results</h4>
    <table class="table table-striped">
        <thead>
            <tr style="color:white">
                <th>Item Code</th>
                <th>Description</th>
                <th>ABC Category</th>
                <th>XYZ Category</th>
                <th>Total Value</th>
                <th>Standard Deviation</th>
                <th>Average Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr style="color:white">
                    <td>@result.ItemCode</td>
                    <td>@result.Dscription</td>
                    <td>@result.ABC_Category</td>
                    <td>@result.XYZ_Category</td>
                    <td>@result.TotalValue</td>
                    <td>@result.StandardDeviation</td>
                    <td>@result.AverageQuantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>