@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Monthly Sales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        /* Ensuring the table is responsive */
        .table {
            width: 100%;
            table-layout: fixed; /* This ensures the columns stay in a fixed size */
        }

        th, td {
            word-wrap: break-word; /* Ensures content wraps properly if it’s too long */
            text-align: center; /* Aligns content to the center of each cell */
        }

        th {
            background-color: #f8f9fa; /* Adds a light background to headers */
        }

        /* Additional styling to prevent text overflow and keep the table clean */
        td {
            max-width: 150px; /* Ensures that the text in the table cells doesn't overflow */
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body style="background-color:whitesmoke;padding:10px">
    <div class="container-fluid">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mb-2" style=" margin-right: 80px">Home</a>
       
        <h2>Monthly Sales</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="color: ">
                <thead>
                    <tr>
                        <th>Item Code</th>
                        <th>Avg Lead Time (Days)</th>
                        <th>January</th>
                        <th>February</th>
                        <th>March</th>
                        <th>April</th>
                        <th>May</th>
                        <th>June</th>
                        <th>July</th>
                        <th>August</th>
                        <th>September</th>
                        <th>October</th>
                        <th>November</th>
                        <th>December</th>
                        <th>Standard Cost</th>
                        <th>Ordering Frequency (Per Month)</th>
                        @* <th>Year</th> *@
                        <th>Yearly Quantity Demand</th>
                        <th>Average Monthly Demand</th>
                        <th>Average Daily Demand</th>
                        <th>Standard Deviation of Monthly Demand</th>
                        <th>Coefficient of Variance</th>
                        <th>Average Lead Time (Months)</th>
                        <th>Expected Service Level</th>
                        <th>Service Level Factor Z</th>
                        <th>Safety Stock</th>
                        <th>Reorder Point</th>
                        <th>Economic Order Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr style="color: ">
                            <td>@sale.ItemCode</td>
                            <td>@sale.AvgLeadTimeinDays</td>
                            <td>@sale.January</td>
                            <td>@sale.February</td>
                            <td>@sale.March</td>
                            <td>@sale.April</td>
                            <td>@sale.May</td>
                            <td>@sale.June</td>
                            <td>@sale.July</td>
                            <td>@sale.August</td>
                            <td>@sale.September</td>
                            <td>@sale.October</td>
                            <td>@sale.November</td>
                            <td>@sale.December</td>
                            <td>@sale.StandardCost</td>
                            <td>@sale.OrderingFrequencyPerMonth</td>
                            @*  <td>@sale.Year</td> *@
                            <td>@sale.YearlyQuantityDemand</td>
                            <td>@sale.AverageMonthlyDemand</td>
                            <td>@sale.AverageDailyDemand</td>
                            <td>@sale.StandardDeviationOfMonthlyDemand</td>
                            <td>@sale.CoefficientOfVariance</td>
                            <td>@sale.AverageLeadTimeInMonths</td>
                            <td>@sale.ExpectedServiceLevel</td>
                            <td>@sale.ServiceLevelFactorZ</td>
                            <td>@sale.SafetyStock</td>
                            <td>@sale.ReorderPoint</td>
                            <td>@sale.EconomicOrderQuantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
