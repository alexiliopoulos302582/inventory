<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryMonitor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryMonitor.styles.css" asp-append-version="true" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">



    <style>
        /* Add custom styling for header and footer */
        header {
            background-image: url('/images/header.jpg');
            background-size: cover; /* Ensure the image covers the header area */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent the image from repeating */
            color: white;
            padding: 10px; /* Adjust padding for better spacing */
            position: sticky;
            top: 0;
            z-index: 1000;
            height: 90px; /* Adjust the height of the header */
            display: flex;
            align-items: center; /* Vertically center the content */
             
        }

        .header-container {
            display: flex;
            align-items: center; /* Vertically align items */
           
            width: 100%;
            padding: 0 20px; /* Add some padding inside the header */
            background-color: rgba(0, 0, 0, 0.5); /*  Optional overlay for better text contrast */
        }

        header a {
            color: white;
            font-weight: bold;
            text-decoration: none;
            padding: 10px 15px;
            background-color: rgba(0, 123, 255, 0.8); /* Slightly transparent blue for button */
            border-radius: 5px;
        }

            header a:hover {
                background-color: rgba(0, 123, 255, 1); /* Fully opaque on hover */
            }

        header h3 {
            margin: 0;
            font-size: 1.5rem;
            color: white;
        }

        footer {
            background-color: #f8f9fa;
            color: #6c757d;
            padding: 15px 0;
            text-align: center;
            border-top: 1px solid #e9ecef;
            position: fixed;
            bottom: 0;
            width: 100%;



        }

        body {
    background-image: url('/images/body4.jpg'); /* Path to your background image */
    background-size: cover; /* Ensure the image covers the entire body */
    background-position: center; /* Center the image */
    background-repeat: no-repeat; /* Prevent the image from repeating */
    margin: 0; /* Remove default margin */
            color: white;
             background-color: rgba(0, 0, 0, 0.7);
            min-height: 100vh; /* Ensure the body takes at least the full height of the viewport */
            padding-bottom: 80px; /* Make room for the footer */
    
}


body::before {
    content: ''; /* Create a pseudo-element for the overlay */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.65); /* Black overlay with 30% transparency */
    z-index: -1; /* Place the overlay behind the content */
}



/* Style for transparent background input fields */
input, select, textarea {
            background-color: transparent !important; /* Force transparency */
            color: lime !important; /* Ensure text is visible */
            border: 1px solid rgba(255, 255, 255, 0.5) !important; /* Light border */
}

/* Optionally, add a focus effect to highlight the input fields when focused */
input:focus, select:focus, textarea:focus {
    background-color: rgba(255, 255, 255, 0.1); /* Slightly opaque background when focused */
    border-color: rgba(0, 123, 255, 0.8); /* Focus border color */
}

        .hover-effect:hover {
            outline: 3px solid #00ffff; /* Bright neon blue border */
            box-shadow: 0 0 25px #00ffff, 0 0 20px #00ffff; /* Glow effect */
            transition: outline 0.8s ease, box-shadow 0.5s ease;
        }


        /* Change the dropdown background color to black */
        .dataTables_length select,
        .dataTables_filter input {
            background-color: black !important; /* Set background color */
            color: white !important; /* Set text color */
            border: 1px solid white !important; /* Optional: add a white border */
        }

            /* Ensure dropdown options are also styled */
            .dataTables_length select option {
                background-color: black !important; /* Set options' background */
                color: white !important; /* Set options' text color */
            }

        /* Reduce spacing between DataTables controls */
        .dataTables_wrapper .dataTables_filter {
            margin-left: 50px; /* Adjust spacing as needed */
        }

        .dataTables_wrapper .dataTables_length {
            margin-left: 10px; /* Adjust spacing as needed */
        }


    </style>
</head>
<body>



    <header style="border-bottom:solid black 10px">
        <div class="header-container" >
            
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary"  style=" margin-right: 80px">Home</a>
            <h3 style="color:lime">Inventory Monitoring</h3>
        </div>
    </header>

    <div class="mt-3" style="margin-left:30px;margin-right:30px @ViewData["BodyClass"]">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; @DateTime.Now.Year Streamline Inventory Monitoring
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#inventoryTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                 pageLength: 100, // Set default entries per page to 100
           lengthMenu: [
            [10, 50, 200, -1],    // Numeric values for options
            [10, 50, 200, "All"]  // Labels displayed in the dropdown
        ],
         dom: '<"d-flex align-items-center gap-2"lf>t<"d-flex justify-content-between"ip>'
            });
        });
    </script>

</body>
</html>
